#!/usr/bin/env bash

set -e

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3
BP_DIR=`cd $(dirname $0); cd ..; pwd`

cd $BUILD_DIR
yarn run playwright install --dry-run chromium
CHROMIUM_PATH=$(yarn run playwright install --dry-run chromium | grep 'chromium-[0-9]' | awk '/Install location/ {print $3}')
mkdir -p \"$CHROMIUM_PATH/chrome-linux\"
ln -sf $(echo $PLAYWRIGHT_BROWSERS_PATH/chrome-linux64/chrome | sed "s|/app|$BUILD_PATH|g") $(echo $CHROMIUM_PATH/chrome-linux/chrome | sed "s|/app|$BUILD_PATH|g")
